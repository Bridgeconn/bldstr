<div class="inner">
	<div class="Block Breadcrumb Moveable Panel" id="AccountBreadcrumb">
		<ul class="last">
			<li><%= link_to "Home", root_path %></li>
			<li>My Account</li>
		</ul>
	</div>
	<h1 class="TitleHeading">My Account</h1>
	<div class="full-width page-content">
		<div class="Left" id="LayoutColumn1">
			<div class="Block AccountMenu Moveable Panel" id="SideAccountMenu">
				<h4>Manage Your Account</h4>
				<div class="BlockContent">
					<%= render 'left_menu' %>
				</div>
			</div>
		</div>
		<div class="Content" id="LayoutColumn2">
			<div class="Block Moveable Panel AccountOrderStatus" id="AccountOrderStatus">
				<h2>Order Status</h2>
				<div class="BlockContent">
					<% if @orders.size > 0 %>
						<% order = @orders.first %>
						<div>
							<p class="InfoMessage">
								The status of your recent orders is shown below. Click 'View Order' to see complete details.
							</p>
							<ul class="AccountOrderStatusList">
								<li class="li-list">
									<div class="btns">
										<%= link_to "View order details", order_details_user_path(order), class: "btn", style: "color: #fff !important" %>
										<!-- <form action="https://store.bild.org/account.php" method="get" class="FloatRight">
											<input type="hidden" name="action" value="view_order">
											<input type="hidden" name="order_id" value="1870">
											<input type="submit" class="btn btn-clear" value="View Order Details">
										</form> -->
										<!-- <form action="https://store.bild.org/account.php" method="get" class="FloatRight">
											<input type="hidden" name="action" value="reorder">
											<input type="hidden" name="order_id" value="1870">
											<input type="submit" class="btn alt btn-clear" value="Reorder">
											&nbsp;
										</form> -->
									</div>
									<h4>Order #<%= order.id %></h4>
									<p class="Meta">
										Order Date: <%= formatted_date(order.created_at) %>
									</p>
									<p>This order is marked as <strong><em>Cancelled</em></strong></p>
									<div style="display:none">
										<p>The outstanding balance of your order is <strong><em class="ProductPrice"><%= number_to_currency(order.total_amount) %></em></strong></p>
										<blockquote class="HowToPay">
											<p><strong>Here's how to pay for your order:</strong></p>
											<span style="display:none"></span>
										</blockquote>
									</div>
									<br>
									<% order.order_items do |item| %>
										<strong>Your Order Contains:</strong>
										<ul class="OrderItemList">
											<li>
												3 x Envisioning Fruitful LifeWork 
												<span class="ExpectedReleaseDate" style="display:none;"></span>
											</li>
										</ul>
									<% end %>
								</li>
							</ul>
						</div>
					<% else %>
						<div class="Block Moveable Panel" id="ACCOUNTORDERSTATUSPAGING"></div>
						<p class="InfoMessage">
							You haven't placed any orders with us. When you do, their status will appear on this page.
						</p>
					<% end %>
				</div>
			</div>
		</div>
		<div class="clear"></div>
	</div>
</div>